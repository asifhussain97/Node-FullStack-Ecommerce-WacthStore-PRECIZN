<script>

// Function to show toast alert
function showToast(message, type) {
    Toastify({
        text: message,
        duration: 3000, // Duration in milliseconds
        gravity: 'bottom', // Position: 'top', 'bottom', 'left', 'right'
        backgroundColor: type === 'success' ? '#33cc33' : '#ff3333', // Change colors based on success/failure
    }).showToast();
}

// Function to handle form submission
function addcartform(event) {
    event.preventDefault();
    const formId = event.target.id; // Get the form ID that triggered the event
    const productData_id = document.querySelector(`#${formId} [name="productData_id"]`).value;
    const qty = document.querySelector(`#${formId} [name="qty"]`).value;

    fetch('/cart', {
        method: 'POST',
        body: JSON.stringify({ productData_id, qty }),
        headers: {
            'Content-Type': 'application/json',
        },
    })
    .then((response) => response.json())
    .then((data) => {
        if (!data.existing) {
            if (data.success) {
                showToast(data.message, 'success');
            } else {
                showToast(data.message, 'error');
            }
        } else {
            window.location.href = '/cart';
        }
    })
    .catch((error) => {
        console.error('Error:', error);
        showToast('Internal server error', 'error');
    });
}

// Add event listeners to all forms
const forms = document.querySelectorAll('form');
forms.forEach(form => {
    form.addEventListener('submit', addcartform);
});
  
//search
document.addEventListener("DOMContentLoaded", function () {
    const searchInput = document.getElementById("searchInput");
    const productGrid = document.getElementById("productGrid");
    const products = productGrid.getElementsByClassName("cardsofproduct");

    searchInput.addEventListener("input", function () {
        const searchText = searchInput.value.toLowerCase();

        for (let i = 0; i < products.length; i++) {
            const productName = products[i].querySelector("h6").textContent.toLowerCase(); // Change 'h2 a' to 'h6' based on your HTML structure

            if (!searchText || productName.includes(searchText)) {
                products[i].style.display = "block"; // Show the product card
            } else {
                products[i].style.display = "none"; // Hide the product card
            }
        }
    });
});

document.addEventListener('DOMContentLoaded', function() {
    let openedCategory = null;
    let openedPlus = null;
    const handleCategoryLinks = function(event) {
        if (event.target.classList.contains('nav-link')) {
            event.preventDefault();

            const categoryId = event.target.getAttribute('data-category-id');
            const subcategory = document.getElementById(`subcategory_${categoryId}`);
            const plusIcon = document.getElementById(`plus2_${categoryId}`);

            if (openedCategory !== null && openedCategory !== subcategory) {
                // Collapse the previously opened category
                openedCategory.style.display = 'none';
                openedPlus.style.transform = 'rotate(0deg)'; // Reset rotation
                openedDiv.style.backgroundColor = '';
            }

            if (subcategory.style.display === 'none') {
                subcategory.style.display = 'block';
                plusIcon.style.transform = 'rotate(45deg)'; // Rotate the plus icon
                event.target.style.backgroundColor = 'rgb(100, 100, 100)'; // Change background color
                openedCategory = subcategory;
                openedPlus = plusIcon
                openedDiv = event.target;
            } else {
                subcategory.style.display = 'none';
                plusIcon.style.transform = 'rotate(0deg)'; // Reset rotation
                event.target.style.backgroundColor = ''; // Reset background color
                openedCategory = null;
            }
        }
    };

    document.querySelector('.nav').addEventListener('click', handleCategoryLinks);
});

// Wait for the DOM content to be loaded
$(document).ready(function() {
    // Listen for form submission
    $('form').submit(function(event) {
        event.preventDefault(); // Prevent default form submission

        // Get the checked subcategory and price range values
        const subcategoryValue = $('input[name="subcategory"]:checked').val();
        const priceRangeValue = $('input[name="price_range"]:checked').val();

        // Check if both subcategory and price range are selected
        if (subcategoryValue && priceRangeValue) {
            // Perform AJAX request with both values
            performFilterRequest(subcategoryValue, priceRangeValue);
        } else if (subcategoryValue) {
            // Only subcategory is selected
            performFilterRequest(subcategoryValue, null);
        } else if (priceRangeValue) {
            // Only price range is selected
            performFilterRequest(null, priceRangeValue);
        } else {
            // Neither subcategory nor price range is selected
            // Prevent form submission
            return false;
        }
    });

    // Function to perform the AJAX request
    function performFilterRequest(subcategory, priceRange) {
        // Perform AJAX request
        $.ajax({
            url: '/filter',
            type: 'POST',
            data: {
                subcategory: subcategory,
                priceRange: priceRange
            },
            success: function(response) {
                // Handle success response
                const filteredProducts = response.filteredProducts;
                // Update the product listing with filtered products
                updateProductListing(filteredProducts);
            },
            error: function(error) {
                // Handle error response
                console.error('Error:', error);
            }
        });
    }


    function updateProductListing(products) {
        const productGrid = $('#productGrid');
        productGrid.empty(); // Clear existing products

        for (const product of products) {
            if (product.is_listed === true) { // Check if the product is listed
                const productHTML = `
                    <div class="cardsofproduct col mb-4">
                        <div class="card h-100" style="max-width: 230px;"> 
                            ${product.image.length > 0 ?
                                `<a style="height: 200px; margin: 10px;" href="/product-details?id=${product._id}">
                                    <img style="height: 200px;" class="card-img-top" src="/assets/img/product/${product.image[0]}" alt="..." />
                                </a>` :
                                `<a style="height: 200px; margin: 10px;" href="/product-details?id=${product._id}">
                                    <img style="height: 200px;" class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                                </a>`
                            }
                            <div class="card-body pt-0 pb-0 p-3">
                                <div class="text-start">
                                    <div style="height: 50px; overflow: hidden; margin-bottom: 0px;">
                                        <a class="text-decoration-none" href="/product-details?id=${ product._id }">
                                            <h6 class="text-dark fw-bolder" style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; white-space: normal; text-overflow: ellipsis;">${ product.name }</h6>
                                        </a>
                                    </div>
                                    ${product.discountStatus && new Date(product.discountStart) <= new Date() && new Date() <= new Date(product.discountEnd) ?
                                        `<h6 class="text-muted d-inline">₹${product.discountPrice} - <s>₹${product.price}</s></h6> <span style="font-size: 12px; background-color: rgb(255, 255, 255); " class=" text-success">-${(((product.price - product.discountPrice) / product.price) * 100).toFixed(2)}%</span>` : 
                                        `<h6 class="text-muted">₹${product.price}</h6>`
                                    }
                                </div>
                            </div>
                            <div class="d-flex justify-content-around card-footer px-4 pt-0 pb-3 border-top-0 bg-transparent">

                                ${product.stock <= 0 ?
                                    `<div class="text-center">
                                        <a class="text-danger text-decoration-none mt-auto" href="#">Out of Stock</a>
                                    </div>` : `
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                    <span class="fa fa-star"></span>
                                    <div class="text-center">
                                        <form id="myForm${product._id}">                   
                                            <div class="product-action-1 show">
                                                <input type="hidden" value="${product._id}" name="productData_id"> 
                                                <input type="hidden" value="1" name="qty">
                                                <button type="submit" aria-label="Add To Cart" class="action-btn btn btn-outline-dark btn-sm hover-up">
                                                    <i class="fa-solid fa-cart-shopping"></i>                                                        
                                                </button>
                                            </div>
                                        </form>
                                    </div>`
                                }

                            </div>
                        </div>
                    </div>`;
                productGrid.append(productHTML); // Append each product HTML
            }
        };
    }
});

</script>

