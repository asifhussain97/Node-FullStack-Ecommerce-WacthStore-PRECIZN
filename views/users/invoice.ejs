<%- include('../layouts/headeruser.ejs') %>      


        <section class="content-main">
            <div class="content-header ">
                <br>
                <br>
                <div>
                    
                </div>
            </div>
            <div class="row justify-content-center" >
                <div class="col-lg-8 col-md-12">
                    <h2 class="content-title card-title ml-200">Invoice</h2>
                    <div class="card" id="invoiceDownload">
                        <header class="card-header">
                            <div class="row align-items-center">
                                <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                                    <small class="text-muted">Order ID:<%= order.orderDate %> </small>
                                </div>
                                <div class="col-lg-6 col-md-6 ms-auto text-md-end">                                   
                                    <a class="btn btn-primary" href="/invoiceDownload?id=<%=order._id %>"> <i class="icon material-icons md-cloud_download mr-5"></i>Save PDF</a>

                                </div>
                            </div>
                        </header> <!-- card-header end// -->

                        <br><br>
                        <div class="card-body">
                            <div class="receipt-content">
                                <div class="container bootstrap snippets bootdey">
                                    <div class="row">
                                        
                                        
                                            <div class="col-md-12">
                                                <div class="invoice-wrapper">
                                                    <div class="intro">
                                                        Hi <strong><%= address.fullName%></strong>,
                                                        <br>
                                                        This is the receipt for a payment of <strong> <%= order.totalPrice %></strong> 
                                                    </div>
                        
                        
                                                    <div class="payment-details">
                                                        <div class="row">
                                                            <div class="col-sm-6">
                                                                <span>Client</span>
                                                                <strong>
                                                                    <%= address.houseName %>
                                                                </strong>
                                                                <p>
                                                                   
                                                                     <%= address.city %> <br>
                                                                    <%= address.pincode %><br>                                                                    
                                                                    <%= address.state %> <br>
                                                                    <a href="#">
                                                                        <%=username %>
                                                                    </a>
                                                                </p>
                                                            </div>
                                                            <div class="col-sm-6 text-end">
                                                                <span>Payment By</span>
                                                                <strong>
                                                                    <%= address.houseName %>
                                                                </strong>
                                                                <p>
                                                                    <%= address.city %><br>
                                                                    <%= address.addressline %> <br>
                                                                    <%= address.pincode %> <br>                                                                 
                                                                    <%= address.state %> <br>                                                                 
                                                                    <a href="#">
                                                                        <%= user.email %>
                                                                    </a>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                        
                                                    <div class="line-items">
                                                        <div class="headers clearfix">
                                                            <div class="row">
                                                                <div class="col-md-3">Product</div>
                                                                <div class="col-md-3">Quantity</div>
                                                               

                                                                <div class="col-md-5 text-end">Amount</div>
                                                            </div>
                                                        </div>

                                                        <% for (let i=0; i < order.items.length;i++) { %>
                                                            <div class="items">
                                                                <div class="row item">
                                                                    <div class="col-md-3 desc">
                                                                        <%= order.items[i].product.Name %>
                                                                    </div>
                                                                    <div class="col-md-3 qty">
                                                                        <%= order.items[i].quantity %>
                                                                    </div>
                                                                 
                                                                    <div class="col-md-5 amount text-end">
                                                                        ₹ <%= order.items[i].pricePerQnt %>

                                                                    </div>
                                                                </div>
                                                               

                                                            <%}%>

                                                        
                                                            
                                                        </div>
                                                        <br><br><br><br><br>
                                                        <div class="total text-end">
                                                        
                                                            <div class="field">
                                                                Subtotal <span>₹<%= order.totalAmount %>  </span>
                                                            </div>
                                                            <div class="field">
                                                                Shipping <span>₹0.00</span>
                                                            </div>
                                                           
                                                            <div class="field grand-total">
                                                                Total <span>₹<%= order.totalAmount %></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                        
                                                <div class="footer">
                                                @Shopping cartel
                                                </div>
                                            </div>
                                        
                                    </div>
                                </div>
                            </div> <!-- card-body end// -->
                        </div> <!-- card end// -->

                        
                    </div>
                                        </div>
            </div>
        </section> <!-- content-main end// -->
        <br><br><br><br><br><br><br>

<%- include('../layouts/footeruser.ejs') %>
       